<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/constraintLayout"
    android:layout_height="155dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
         >

            <TextView
                android:id="@+id/textEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/event_dot"
                android:drawablePadding="10dp"
                android:textColor="@color/event_pink"
                style="@style/VideoTitle"
                android:text="Bangalore"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/VideoTitle"
                android:layout_marginEnd="16dp"
                android:text="15 Mi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="India"
                app:layout_constraintStart_toStartOf="@+id/textEventName"
                app:layout_constraintTop_toBottomOf="@+id/textEventName" />

            <TextView
                android:id="@+id/textStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="04/01/2021"
               style="@style/VideoTitle"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/textLocation"
                app:layout_constraintTop_toBottomOf="@+id/textLocation" />

            <TextView
                android:id="@+id/textEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="05/01/2021"
                style="@style/VideoTitle"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/textStartDate"
                app:layout_constraintStart_toEndOf="@+id/textStartDate"
                app:layout_constraintTop_toTopOf="@+id/textStartDate" />

            <TextView
                android:id="@+id/textEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="12:15 pm"
                style="@style/VideoTitle"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/textStartDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textStartDate" />

            <TextView
                android:id="@+id/textStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                style="@style/VideoTitle"
                android:textSize="14sp"
                android:text="12:00 am"
                app:layout_constraintBottom_toBottomOf="@+id/textStartDate"
                app:layout_constraintEnd_toStartOf="@+id/textEndTime"
                app:layout_constraintTop_toTopOf="@+id/textStartDate" />
        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>